<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    tools:context=".MainActivity">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />
    <TextView
        android:id="@+id/searchbar"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:hint="Search..."
        android:drawableStart="@drawable/places_ic_search"
        android:layout_margin="8dp"
        android:textColor="@color/colorBlack"
        android:elevation="10dp"
        android:textSize="24dp"
        android:clickable="true"
        android:background="@color/colorWhite"
        />
    <ImageButton
        android:id="@+id/layerBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:clickable="true"
        android:layout_below="@id/searchbar"
        android:layout_alignParentEnd="true"
        android:src="@drawable/layer"
        android:layout_marginEnd="9dp"
        android:background="@drawable/bg_round"
        android:elevation="8dp"
        />
    <ImageButton
        android:id="@+id/locationBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:clickable="true"
        android:layout_below="@id/layerBtn"
        android:layout_alignParentEnd="true"
        android:src="@drawable/current_loc"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="9dp"
        android:background="@drawable/bg_round"
        android:elevation="8dp"
        />
    <ImageButton
        android:id="@+id/locationMNITBtn"
        android:layout_width="40dp"
        android:clickable="true"
        android:layout_height="40dp"
        android:layout_below="@id/locationBtn"
        android:layout_alignParentEnd="true"
        android:src="@drawable/mnit_location"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="9dp"
        android:background="@drawable/bg_round"
        android:elevation="8dp"
        />

    <ImageButton
        android:id="@+id/nav_btn"
        android:clickable="true"
        android:visibility="invisible"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignEnd="@+id/searchbar"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/bg_round"
        android:src="@drawable/nav"
        android:elevation="8dp"/>
</RelativeLayout>